@model Dicetek.DomainModels.RegisterModel

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label asp-for="firstName" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="firstName" class="form-control" autocomplete="off" placeholder="Enter your First Name" />
                    </div>
                    <span asp-validation-for="firstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label asp-for="lastName" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="lastName" class="form-control" autocomplete="off" placeholder="Enter your Last Name" />
                    </div>
                    <span asp-validation-for="lastName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label asp-for="emailId" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="emailId" class="form-control" autocomplete="off" placeholder="Enter your Email ID" />
                    </div>
                    <span asp-validation-for="emailId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label asp-for="mobileNo" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="mobileNo" class="form-control" autocomplete="off" placeholder="Enter your Mobile No" />
                    </div>
                    <span class="help-block">
                        [eg: +971551234567]
                    </span>
                    <span asp-validation-for="mobileNo" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label asp-for="creditCard" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="creditCard" class="form-control" autocomplete="off" placeholder="Enter your Credit Card" />
                    </div>
                    <span asp-validation-for="creditCard" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label asp-for="ccExpiryDate" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="ccExpiryDate" id="ccExpiryDate" class="form-control" autocomplete="off" placeholder="Enter your Credit Card ExpiryDate" />
                    </div>
                    <span asp-validation-for="ccExpiryDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label asp-for="ccv" class="control-label"></label>
                    <div class="input-group">
                        <input asp-for="ccv" class="form-control" autocomplete="off" placeholder="Enter your CCV" />
                    </div>
                    <span asp-validation-for="ccv" class="text-danger"></span>
                </div>

            </div>
        </div>
    </div>
    <div class="form-actions">
        <button type="submit" class="btn blue btn-block">Submit</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
